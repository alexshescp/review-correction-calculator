    const minRange = document.getElementById('newRatingMinRange'); // –ï—Å–ª–∏ –µ—Å—Ç—å range input –¥–ª—è —ç—Ç–æ–≥–æ
    const maxEl = document.getElementById('newRatingMax');
    const maxRange = document.getElementById('newRatingMaxRange'); // –ï—Å–ª–∏ –µ—Å—Ç—å range input

    // –ú–∏–Ω–∏–º–∞–ª—å–Ω–æ –¥–æ–ø—É—Å—Ç–∏–º—ã–π –Ω–æ–≤—ã–π —Ä–µ–π—Ç–∏–Ω–≥ –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –Ω–µ –Ω–∏–∂–µ –¢–†–ï–ë–£–ï–ú–û–ì–û, 
    // —Ç–∞–∫ –∫–∞–∫ —á—Ç–æ–±—ã –ø–æ–¥–Ω—è—Ç—å —Ä–µ–π—Ç–∏–Ω–≥, –Ω–æ–≤—ã–µ –æ—Ç–∑—ã–≤—ã –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å –ª—É—á—à–µ —Ç–µ–∫—É—â–µ–π —Ü–µ–ª–∏ (–æ–±—ã—á–Ω–æ).
    // –ü–æ –¢–ó: "–î–æ–ø—É—Å—Ç–∏–º—ã–π —É—Ä–æ–≤–µ–Ω—å –Ω–æ–≤—ã—Ö –æ—Ü–µ–Ω–æ–∫ - –∑–Ω–∞—á–µ–Ω–∏–µ –û–¢ –Ω–µ –Ω–∏–∂–µ –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ —Ç—Ä–µ–±—É–µ–º–æ–≥–æ –±–∞–ª–ª–∞"

    // –ù–æ –µ—Å–ª–∏ —Ü–µ–ª–µ–≤–æ–π —Ä–µ–π—Ç–∏–Ω–≥ 0, —Ç–æ –ª–æ–≥–∏—á–Ω–µ–µ –æ—Ç—Ç–∞–ª–∫–∏–≤–∞—Ç—å—Å—è –æ—Ç —Ç–µ–∫—É—â–µ–≥–æ –∏–ª–∏ 0. 
    // –û–±—ã—á–Ω–æ targetRating >= currentRating. 
    // –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π –º–∏–Ω–∏–º—É–º: targetRating
    const minVal = targetRating;

    if (minEl) minEl.min = minVal;
    if (minRange) minRange.min = minVal;

    // –ï—Å–ª–∏ —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –º–µ–Ω—å—à–µ –Ω–æ–≤–æ–≥–æ –º–∏–Ω–∏–º—É–º–∞, –æ–±–Ω–æ–≤–ª—è–µ–º
    if (getVal('newRatingMin') < minVal) {
        if (minEl) minEl.value = minVal.toFixed(1);
    }

    // –í–µ—Ä—Ö–Ω—è—è –≥—Ä–∞–Ω–∏—Ü–∞ - maxRating (–æ–±—ã—á–Ω–æ 10)
    if (maxEl) {
        maxEl.max = maxRating;
        // –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é 10, –µ—Å–ª–∏ –≤–¥—Ä—É–≥ —Å–±–∏–ª–æ—Å—å –∏–ª–∏ –ø—É—Å—Ç–æ
        if (!maxEl.value) maxEl.value = maxRating;
    }

    // –ï—Å–ª–∏ "–î–æ" –º–µ–Ω—å—à–µ "–û—Ç", –ø–æ–¥—Ç—è–≥–∏–≤–∞–µ–º "–î–æ"
    const currentMin = getVal('newRatingMin');
    if (getVal('newRatingMax') < currentMin) {
        if (maxEl) maxEl.value = currentMin > maxRating ? maxRating : currentMin;
    }
}

