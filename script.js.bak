function updateNewRatingMinMax() {
    // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ —Ü–µ–ª–µ–≤–æ–≥–æ —Ä–µ–π—Ç–∏–Ω–≥–∞
    const targetRating = getVal('targetRating');
